extend ../layout

block content
    header.join-header
        h1 #{title} 
    br

    h3 Username : #{user.username}
    if articles
        h5 Written articles :
        ul.list-group()
            each article, i in articles
                li.list-group-item.color-container 
                    a(href='/articles/'+article.id)= article.title
    else 
        p.color-container User didn't poste any articles.


