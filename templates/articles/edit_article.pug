extends ../layout 

block content
    header.join-header
        h1 #{title}
    br
    form(method='POST', action='/articles/edit/'+article._id)
        #form-groupe
            label Title : 
            input.form-control.color-container(name='title', type='text', value= article.title)
        #form-groupe
            label Body : 
            textarea.form-control.color-container.my-textarea(name='body')= article.body
        br
        input.btn.btn-primary(type='submit', value='Submit')